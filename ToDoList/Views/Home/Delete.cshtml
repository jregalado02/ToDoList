@model ToDo

<h1>Delete Task</h1>
 
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete To Do</h2>
            <hr />

        </div>
        
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            
             <label asp-for="IsDone">Completed?</label>
            
             <select class="custom-select" disabled asp-for="IsDone">
                <option selected>Choose...</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
             </select>
        </div>

        <button id="bttn" type="submit" class="btn btn-danger">Delete</button>
         <a asp-controller="Home" asp-action="index" class="btn btn-secondary" style="width:150px">Back to List</a>
        
        


    </div>


</form>

